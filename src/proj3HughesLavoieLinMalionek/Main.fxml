<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane stylesheets="@Main.css" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <ScrollPane fx:id="compositionPane" BorderPane.alignment="CENTER">
         <content>
            <Pane fx:id="compositionBox" onMouseClicked="#addNoteOnClick" />
         </content>
      </ScrollPane>
   </center>
   <top>
       <MenuBar BorderPane.alignment="CENTER">
           <menus>
               <Menu text="File">
                   <items>
                       <MenuItem onAction="#exitProgram" text="Exit">
                           <accelerator>
                               <KeyCodeCombination alt="UP" code="Q" control="UP" meta="DOWN" shift="UP" shortcut="UP" />
                           </accelerator></MenuItem>
                   </items>
               </Menu>
               <Menu text="Action">
                   <items>
                       <MenuItem onAction="#handlePlay" text="Play">
                           <accelerator>
                               <KeyCodeCombination alt="UP" code="P" control="UP" meta="DOWN" shift="UP" shortcut="UP" />
                           </accelerator></MenuItem>
                       <MenuItem onAction="#stopComposition" text="Stop">
                           <accelerator>
                               <KeyCodeCombination alt="UP" code="S" control="UP" meta="DOWN" shift="UP" shortcut="UP" />
                           </accelerator></MenuItem>
                   </items>
               </Menu>
           </menus>
       </MenuBar>
   </top>
</BorderPane>
